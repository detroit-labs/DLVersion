# source 'https://github.com/CocoaPods/Specs.git'

# App Targets
target 'DLVersionApp (iOS)' do
  use_frameworks!
  platform :ios, '13.0'

  pod "DLVersion", :path => "../"
end

target 'DLVersion-WatchOS WatchKit Extension' do
  use_frameworks!
  platform :watchos, '8.0'

  pod "DLVersion", :path => "../"
end

target 'DLVersion-tvOS' do
  platform :tvos, '15.0'

  pod "DLVersion", :path => "../"
end

target 'DLVersionApp (macOS)' do
  use_frameworks!
  platform :osx, '12.0'

  pod "DLVersion", :path => "../"
end

# Test Targets
target 'Tests iOS' do
  platform :ios, '13.0'
  
  pod "DLVersion", :path => "../"
end

target 'Tests macOS' do
  platform :osx, '12.0'
  
  pod "DLVersion", :path => "../"

end

